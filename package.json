{
    "name": "drrr-front",
    "version": "0.0.0",
    "type": "module",
    "private": true,
    "workspaces": [
        "service",
        "admin",
        "component"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint --cache . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "postinstall": "husky install",
        "format": "prettier --cache --write .",
        "test": "jest"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
        "eslint --fix"
        ]
    },
    "dependencies": {
        "@babel/core": "^7.22.10",
        "@babel/preset-env": "^7.22.10",
        "@babel/preset-react": "^7.22.5",
        "@nextui-org/react": "^2.0.22",
        "@nextui-org/system": "^2.0.5",
        "@nextui-org/theme": "^2.0.5",
        "axios": "^1.4.0",
        "framer-motion": "^10.16.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.15.0"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.22.5",
        "@storybook/addon-essentials": "7.3.1",
        "@storybook/addon-interactions": "7.3.1",
        "@storybook/addon-links": "7.3.1",
        "@storybook/addon-onboarding": "1.0.8",
        "@storybook/blocks": "7.3.1",
        "@storybook/builder-vite": "^7.3.1",
        "@storybook/react": "7.3.1",
        "@storybook/react-vite": "7.3.1",
        "@storybook/testing-library": "0.2.0",
        "@testing-library/jest-dom": "^6.0.1",
        "@testing-library/react": "^14.0.0",
        "@types/react": "^18.2.15",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "@vitejs/plugin-react": "^4.0.3",
        "autoprefixer": "^10.4.15",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "eslint-plugin-storybook": "^0.6.13",
        "husky": "^8.0.3",
        "jest": "^29.6.2",
        "jest-environment-jsdom": "^29.6.2",
        "lint-staged": "^14.0.0",
        "postcss": "^8.4.28",
        "storybook": "7.3.1",
        "tailwindcss": "^3.3.3",
        "typescript": "^5.0.2",
        "vite": "^4.4.5"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
